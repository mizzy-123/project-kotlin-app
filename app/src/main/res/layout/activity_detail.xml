<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/LI_img_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/gambar1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinssemibold"
        android:text="DETAIL ORDERAN"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.142" />

    <RelativeLayout
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.425">

        <TextView
            android:id="@+id/In_txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-90dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppinssemibold"
            android:text="INSENTIF PER KATEGORI"
            android:textSize="24sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/Kat_txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/In_txt_1"
            android:paddingLeft="20dp"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/poppinsregular"
            android:text="DATE"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/Kat_txt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Kat_txt_1"
            android:paddingLeft="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppinsregular"
            android:text="NAMA TOKO"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/Kat_txt_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Kat_txt_2"
            android:paddingLeft="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppinsregular"
            android:text="NAMA SALES"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/Kat_txt_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Kat_txt_3"
            android:paddingLeft="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppinsregular"
            android:text="KATEGORI"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/Kat_txt_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Kat_txt_4"
            android:paddingLeft="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppinsregular"
            android:text="NAMA BARANG"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/Kat_txt_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Kat_txt_5"
            android:paddingLeft="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppinsregular"
            android:text="QTY"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/Kat_txt_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/In_txt_1"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="69dp"
            android:layout_toRightOf="@id/Kat_txt_1"
            android:width="180dp"
            android:height="35dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/Kat_txt_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Kat_txt_1"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/Kat_txt_1"
            android:width="180dp"
            android:height="35dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/Kat_txt_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Kat_txt_2"
            android:layout_marginLeft="79dp"
            android:layout_marginTop="27dp"
            android:layout_toRightOf="@id/Kat_txt_2"
            android:width="180dp"
            android:height="35dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/Kat_txt_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Kat_txt_3"
            android:layout_marginLeft="78dp"
            android:layout_marginTop="26dp"
            android:layout_toRightOf="@id/Kat_txt_3"
            android:width="180dp"
            android:height="35dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/Kat_txt_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Kat_txt_4"
            android:layout_marginLeft="103dp"
            android:layout_marginTop="29dp"
            android:layout_toRightOf="@id/Kat_txt_4"
            android:width="180dp"
            android:height="35dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/Kat_txt_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Kat_txt_5"
            android:layout_marginLeft="103dp"
            android:layout_marginTop="29dp"
            android:layout_toRightOf="@id/Kat_txt_4"
            android:width="180dp"
            android:height="35dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:width="150dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/poppinsbold"
        android:text="Delete"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.187"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail"
        app:layout_constraintVertical_bias="0.303" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:width="150dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/poppinsbold"
        android:text="Update"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.816"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail"
        app:layout_constraintVertical_bias="0.303" />

</androidx.constraintlayout.widget.ConstraintLayout>